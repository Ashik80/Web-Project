@model web_project.Models.ViewModels.LoginViewModel

@{

  Layout = null;

  ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>

<head>
  <title>@ViewData["Title"]</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">


  <link rel="stylesheet" href="~/css/Login/style.css">
  <link rel="stylesheet" href="~/css/Login/responsive.css">
</head>

<body>
  <form asp-action="Login">
    <h1>Login Form</h1>
    <div class="formcontainer">
      <hr />
      <div asp-validation-summary="ModelOnly" style="color: red;"></div>
      <div class="container">
        <label for="uname"><strong>Username</strong></label>
        <input type="text" placeholder="Enter Email" asp-for="Email" />
        <span asp-validation-for="Email" style="color: red;"></span>
        <label for="psw"><strong>Password</strong></label>
        <input type="password" placeholder="Enter Password" asp-for="Password" />
        <span asp-validation-for="Email" style="color: red;"></span>
      </div>

      <label for="User"><strong>User </strong></label>
    </div>
    <div class="item">

      <select asp-for="InRole">

        <option value="Customer">Customer</option>
        <option value="Admin">Admin</option>
        <option value="Support">Support</option>
        <option value="Delivery">Delevary man</option>

      </select>
      <span asp-validation-for="Email" style="color: red;"></span>
    </div>

    <button type="submit">Login</button>
    <div class="container" style="background-color: #eee">
      <label style="padding-left: 15px">
        <input type="checkbox" asp-for="RememberMe" /> Remember me
      </label>
      <span class="psw"><a href="#"> Forgot password?</a></span>
    </div>
  </form>

  @section Scripts{
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  }

</body>

</html>
